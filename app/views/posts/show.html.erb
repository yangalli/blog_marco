<%= content_for :page_title, @post.title %>

<section class="section">
  <div class="container">
    <nav class="level">
      <div class="level-left">
        <p class="level-item">
          <strong>Action</strong>
        </p>
      </div>

      <div class="level-right">
        <p class="level-item">
          <%= link_to "Edit", edit_post_path(@post), class: "button" %>
        </p>
        <p class="level-item">
          <%= link_to  "Delete", post_path(@post), method: :delete, data: {confirm: 'Tem certeza que quer deletar esse post?'}, class: "button is-danger" %>
        </p>
      </div>
    </nav>
    
    <hr> 

    <div class="content">
      <%= @post.content %>
    </div>
  </div>
</section>

<section class="comments">

</section>